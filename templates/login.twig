<!DOCTYPE html>
<html>
<head>
    <style>

    </style>
</head>
<body class="align">
<div class='text-info'>
    {% if session.getFlashBag.has('header') %}
        {% for header in session.getFlashBag.get('header', []) %}
            <h4>{{ header }}</h4>
        {% endfor %}
    {% endif %}
</div>
<div class="grid">
    <link rel="stylesheet" type="text/css" href="stylesheet.css">
    <form action="login.php" method="post" class="form login">

        <header class="login__header">
            <h3 class="login__title">Login</h3>
        </header>

        <div class="login__body">

            <div class="form__field">
                <input type="email" placeholder="Email" name="Email-address" id="email" required>
            </div>

            <div class="form__field">
                <input type="password" placeholder="Password" name="Password" id="password" required>
            </div>

        </div>

        <footer class="login__footer">
            <input type="hidden" value="{{ getMac("Login") }}" name="XSRFPreventionToken">
            <input type="submit" name="login" value="Login">

            <p><span class="icon icon--info">?</span><a href="#">Forgot Password</a></p>
        </footer>

    </form>

</div>

</body>
</html>