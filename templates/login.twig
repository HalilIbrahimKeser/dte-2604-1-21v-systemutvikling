{% extends "layout.twig" %}
{% block content %}
    <section class="loginn">
        <form action="../login.php" method="post">
            <div class="container_center">
                <img id="innloggLogo" src="images/morild_logo_150px.png" alt="Logo"/>
                <div class="button button_long">
                    <label for="user"> Brukernavn: </label>
                    <input type="text" onfocus="this.placeholder = ''" placeholder="Brukernavn" name="email"
                           id="user" required>
                </div>
                <div class="button button_long">
                    <label for="password"> Passord: </label>
                    <input type="password" onfocus="this.placeholder = ''" placeholder="Passord"
                           name="password" id="password" required>
                </div>

                <div>
                    <button id="buttonNoBorderOnlyGreenText" class="button" type="button" name="forgotten_password">
                        Glemt passord
                    </button>
                    <input id="submit" type="submit" name="login" value="Bekreft">
                </div>

            </div>
        </form>
    </section>
{% endblock %}