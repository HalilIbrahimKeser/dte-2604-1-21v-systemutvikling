{% extends "layout.twig" %}
{% block content %}
    <section class="rapporter" id="rapporter">
        <div class="container container_small cursor" onclick="window.location.href='group_register.php';">
            <button id="button" class="button" title="Ny bruker"
                    onclick="window.location.href='group_register.php';">
                <img src="images/icon_legg_til_bruker.svg" width="30em"> Legg til ny gruppe
            </button>
        </div>
    </section>

    <section>
        {% if projects %}
            <div class="openContainerNoBorder text" id="prosjektTabell">
                <h3>Rapporter </h3>
                <table class="table" id="table">
                    <tr>
                        <th>Prosjekt navn</th>
                        <th>Status</th>
                        <th>Detaljer & utskrift</th>
                    </tr>
                    {% for project in projects %}
                        <tr>
                            {# PROSJEKTNAVN #}
                            <td>{{ project.getProjectName() }}</td>

                            {# PROSJEKT STATUS #}
                            {% if project.getStatus() == 0 %}
                                <td>Ventende</td>
                            {% endif %}
                            {% if project.getStatus() == 1 %}
                                <td>Pågår</td>
                            {% endif %}
                            {% if project.getStatus() == 2 %}
                                <td>Pauset</td>
                            {% endif %}
                            {% if project.getStatus() == 3 %}
                                <td>Avslått</td>
                            {% endif %}
                            {% if project.getStatus() == 4 %}
                                <td>Avsluttet</td>
                            {% endif %}

                            <td>
                                <button class="buttons miniButtons" id="miniButtons"
                                        onclick="location.href='report_print.php?projectid={{ project.getProjectID() }}';">
                                    Skriv ut
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% endif %}
    </section>

    <section>
        {# Fremskrittsdiagram #}
        {% if projects %}
            <div class="openContainerNoBorder text" id="prosjektTabell">
                <h3>Fremskrittsdiagram </h3>
                <table class="table" id="table">
                    <tr>
                        <th>Prosjekt navn</th>
                        <th>Tid brukt</th>
                        <th>Estimert totalt</th>
                    </tr>
                    {% for project in projects %}
                        {% set timeSpentSum = 0 %}
                        {% set estimertTidSum = 0 %}
                        <tr>
                            <td>{{ project.getProjectName() }}</td>

                            {% for task in tasks %}
                                {% if task.projectName == project.projectName %}
                                    {% set timeSpentSum = timeSpentSum + (task.getTimeSpent) %}
                                    {% set estimertTidSum = estimertTidSum + (task.getEstimatedTime) %}
                                {% endif %}
                            {% endfor %}
                            <td>{{ timeSpentSum }}</td>
                            <td>{{ estimertTidSum }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% endif %}
    </section>
{% endblock %}